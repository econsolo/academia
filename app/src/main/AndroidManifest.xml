<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.consolo.academia">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".AcademiaApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="Treinos"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".ConsultarTreinoActivity"
            android:label="@string/treinos"
            android:launchMode="singleTop">
        </activity>
        <activity
            android:name=".ConsultarExercicioActivity"
            android:label="@string/exercicios"
            android:launchMode="singleTop">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".ConsultarTreinoActivity" />
        </activity>
        <activity android:name=".CadastrarActivity"
            android:label="@string/cadastrar"
            android:launchMode="singleTop">
        </activity>
        <activity android:name=".LoginActivity"
            android:label="@string/entrar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ResetarSenhaActivity"
            android:label="@string/redefinir_senha"
            android:launchMode="singleTop">

        </activity>



        <service
            android:name=".MyFirebaseInstanceService"
            android:exported="true">
            <intent-filter>
                <action android:name="com.google.firebase.INSTANCE_ID_EVENT" />
            </intent-filter>
        </service>
        <service android:name=".MyFirebaseMessagingService">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>


    </application>

</manifest>